<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BelenChauca.Login">
    <ContentPage.Content>
        <StackLayout>
            <Frame Background="blue" Padding="0" CornerRadius="0">
                <Label Text="Inicio de sesión" HorizontalTextAlignment="Center" TextColor="White" FontSize="20"/>
            </Frame>

            <Image Source="https://sbsconsulting.com.ec/wp-content/uploads/2018/01/LOGO-UISRAEL-768x209.png" WidthRequest="100" HeightRequest="100"/>

            <Entry x:Name="txtUsuario" Placeholder="Ingrese su Usuario"/>
            <Entry x:Name="txtContrasena" Placeholder="Ingrese su Contraseña" IsPassword="True"/>
            <Button x:Name="btnAbrir" Text="Bienvenido" Clicked="btnAbrir_Clicked"/>
            <Label x:Name="lblMensaje" Text="" TextColor="red"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>